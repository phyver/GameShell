#!/bin/sh

# display some info about the system
echo "========================="
echo "bash' OSTYPE=$(bash -c 'echo $OSTYPE')"
echo "========================="
echo "uname -a"
uname -a
echo "========================="
echo "bash --version"
bash --version | head -n1
echo "========================="
echo "awk --version"
(awk -Wversion 2>/dev/null || awk --version 2>/dev/null || awk -V 2>/dev/null) | head -n1
echo "========================="
echo "locale"
locale
echo "========================="
